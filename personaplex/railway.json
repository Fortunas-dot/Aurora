{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd moshi && pip install . && pip install accelerate"
  },
  "deploy": {
    "startCommand": "python -m moshi.server --ssl /tmp/ssl --host 0.0.0.0 --port $PORT --cpu-offload",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}


